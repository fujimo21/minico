<h1>映画登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@movie) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.submit "Register Movie", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  
  <% @movies.each do |movie| %>
  	<%= image_tag("#{@configuration.base_url}w154#{movie.poster_path}") if movie.poster_path %>
		<%= movie.title %>
		
  <% end %>
</div>